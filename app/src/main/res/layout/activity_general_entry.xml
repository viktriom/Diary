<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sonu.diary.activities.GeneralEntry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblCreationTime"
        android:textSize="10sp"
        android:layout_alignTop="@+id/lblHeading"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/general_entry"
        android:id="@+id/lblHeading"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lblLastModifiedOn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblLastModifiedOn"
        android:text="@string/lastModifiedOn"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEntryTitle"
        android:hint="Title"
        android:layout_below="@+id/btnSave"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEntryLocation"
        android:layout_alignTop="@+id/txtEntryTitle"
        android:layout_alignParentEnd="true"
        android:hint="Location" />

    <EditText
        android:id="@+id/txtGeneralEntryDetail"
        android:layout_width="wrap_content"
        android:layout_height="258dp"
        android:layout_alignEnd="@+id/txtEntryLocation"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtEntryTitle"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="saveGeneralEntry"/>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtGeneralEntryDetail"
        android:id="@+id/table">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtEntryActionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Entry Action Time:" />
            <TextView
                android:id="@+id/txtEntryActionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="0dip"
                android:onClick="showPicker"
                android:text="dd/mmm/yyyy hh:mm:ss" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblExpenditure"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginTop="3dip"
                android:text="Enter Expenditure Amount:" />
            <EditText
                android:id="@+id/txtExpenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="showPicker"
                android:text="" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblExpenditureSource"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginTop="3dip"
                android:text="Enter Expenditure Source:" />
            <EditText
                android:id="@+id/txtExpenditureSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="showPicker"
                android:text="SBI Debit" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblIsSharable"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/lblExpenditure"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="Allow Sharing:" />
            <Switch
                android:id="@+id/swhIsSharable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lblExpenditure"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
