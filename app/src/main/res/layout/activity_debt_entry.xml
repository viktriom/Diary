<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DebtEntryController">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:ems="10"
        android:hint="Entry Title"
        android:inputType="textPersonName"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="359dp"
        android:layout_height="35dp"
        android:ems="10"
        android:hint="Borrowed From"
        android:inputType="textPersonName"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="170dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="357dp"
        android:layout_height="30dp"
        android:ems="10"
        android:hint="Narration"
        android:inputType="textPersonName"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch To Select Time"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audit Trail"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch To Select Time"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="249dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="356dp"
        android:layout_height="31dp"
        android:ems="10"
        android:hint="Amount Borrowed"
        android:inputType="textPersonName"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debt Time:"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp Settlement Time:"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="8dp"
        android:text="Debt Entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Modified On:"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="19dp" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:text="Save"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Add Settlement Detail"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="410dp" />

</androidx.constraintlayout.ConstraintLayout>